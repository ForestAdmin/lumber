      },
      as: 'user',
    });
    Users.hasMany(models.reviews, {
      foreignKey: {
        name: 'userId',
        field: 'user_id',
      },
      as: 'user',
    });
    Users.belongsToMany(models.books, {
      through: 'user_books',
    });
